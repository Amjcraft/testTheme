<footer id="footer2" class="mz-pagefooter col-xs-12 no-pad">
	<div class="footer-top col-xs-12 no-pad">
		<div class="newsletter-wrapper container">
    		<h2>{{ labels.stayInTouch }}</h2>
    		<div class="newsletter-text">
    			<i>{{ labels.signUpNewsletter2 }}</i>
			</div>
			<a class="newsletter-link" href="#" alt="{{ labels.signUpNewsletter }}" title="{{ labels.signUpNow }}" target="_blank"><button class="primary">{{ labels.signUpNewsletter }} <i class="icon chevron2-right"></i></button></a>
		</div>
	</div>
	<div class="footer-bottom col-xs-12 no-pad">
		<div class="container">
			<div class="row">
			    <ul class="footer-link-col col-xs-12 col-sm-7">
					<li><a class="footer-link" href="#" alt="{{ labels.aboutUs }}" title="{{ labels.aboutUs }}">{{ labels.aboutUs }}</a></li>
					<li><a class="footer-link" href="#" alt="{{ labels.helpFAQ }}" title="{{ labels.helpFAQ }}">{{ labels.helpFAQ }}</a></li>
					<li><a class="footer-link" href="#" alt="{{ labels.privacyPolicy }}" title="{{ labels.privacyPolicy }}">{{ labels.privacyPolicy }}</a></li>
					<li><a class="footer-link" href="#" alt="{{ labels.shippingInformation }}" title="{{ labels.shippingInformation }}">{{ labels.shippingInformation }}</a></li>
			        {% if user.isAnonymous %}
						<li><a class="footer-link" href="/user/login" alt="{{ labels.logIn }}" title="{{ labels.logIn }}">{{ labels.logIn }}</a> / <a class="footer-link" href="/user/signup" alt="{{ labels.register }}" title="{{ labels.register }}">{{ labels.register }}</a></li>
					{% else %}
						<li><a class="footer-link" href="/logout" class="mz-utilitynav-link" alt="{{ labels.logout }}" title="{{ labels.logout }}">{{ labels.logout }}</a></li>
					{% endif %}
					<li><a class="footer-link" href="#" alt="{{ labels.orderStatus }}" title="{{ labels.orderStatus }}">{{ labels.orderStatus }}</a></li>
					<li><a class="footer-link" href="#" alt="{{ labels.wishlist }}" title="{{ labels.wishlist }}">{{ labels.wishlist }}</a></li>
					<li><a class="footer-link" href="#" alt="{{ labels.viewCart }}" title="{{ labels.viewCart }}">{{ labels.viewCart }}</a></li>
				</ul>
			    <div class="footer-social-wrapper col-xs-12 col-sm-5">
			    	<div class="social-links-wrapper col-xs-12 no-pad">
			    		{% if themeSettings.socialBloggerUrl %}
				    		<a class="social-link" href="{{ themeSettings.socialBloggerUrl }}" alt="{{ labels.followBlog }}" title="{{ labels.followBlog }}" target="_blank">
			    				<i class="icon social-blogger-circle"></i>
			    			</a>
			    		{% endif %}
			    		{% if themeSettings.socialFacebookUrl %}
				    		<a class="social-link" href="{{ themeSettings.socialFacebookUrl }}" alt="{{ labels.followFacebook }}" title="{{ labels.followFacebook }}" target="_blank">
			    				<i class="icon social-facebook-circle"></i>
			    			</a>
			    		{% endif %}
			    		{% if themeSettings.socialGooglePlusUrl %}
				    		<a class="social-link" href="{{ themeSettings.socialGooglePlusUrl }}" alt="{{ labels.followGooglePlus }}" title="{{ labels.followGooglePlus }}" target="_blank">
			    				<i class="icon social-google-plus3-circle"></i>
			    			</a>
			    		{% endif %}
			    		{% if themeSettings.socialInstagramUrl %}
				    		<a class="social-link" href="{{ themeSettings.socialInstagramUrl }}" alt="{{ labels.followInstagram }}" title="{{ labels.followInstagram }}" target="_blank">
			    				<i class="icon social-instagram-circle"></i>
			    			</a>
			    		{% endif %}
			    		{% if themeSettings.socialLinkedInUrl %}
				    		<a class="social-link" href="{{ themeSettings.socialLinkedInUrl }}" alt="{{ labels.followLinkedIn }}" title="{{ labels.followLinkedIn }}" target="_blank">
			    				<i class="icon social-linkedin-circle"></i>
			    			</a>
			    		{% endif %}
			    		{% if themeSettings.socialPinterestUrl %}
				    		<a class="social-link" href="{{ themeSettings.socialPinterestUrl }}" alt="{{ labels.followPinterest }}" title="{{ labels.followPinterest }}" target="_blank">
			    				<i class="icon social-pinterest-circle"></i>
			    			</a>
			    		{% endif %}
			    		{% if themeSettings.socialTumblrUrl %}
				    		<a class="social-link" href="{{ themeSettings.socialTumblrUrl }}" alt="{{ labels.followTumblr }}" title="{{ labels.followTumblr }}" target="_blank">
			    				<i class="icon social-tumblr-circle"></i>
			    			</a>
			    		{% endif %}
			    		{% if themeSettings.socialTwitterUrl %}
				    		<a class="social-link" href="{{ themeSettings.socialTwitterUrl }}" alt="{{ labels.followTwitter }}" title="{{ labels.followTwitter }}" target="_blank">
			    				<i class="icon social-twitter-circle"></i>
			    			</a>
			    		{% endif %}
			    		{% if themeSettings.socialVimeoUrl %}
				    		<a class="social-link" href="{{ themeSettings.socialVimeoUrl }}" alt="{{ labels.followVimeo }}" title="{{ labels.followVimeo }}" target="_blank">
			    				<i class="icon social-vimeo"></i>
			    			</a>
			    		{% endif %}
			    		{% if themeSettings.socialYouTubeUrl %}
				    		<a class="social-link" href="{{ themeSettings.socialYouTubeUrl }}" alt="{{ labels.followYouTube }}" title="{{ labels.followYouTube }}" target="_blank">
			    				<i class="icon social-youtube1-circle"></i>
			    			</a>
			    		{% endif %}
			    	</div>
					<div class="logo-wrapper col-xs-12 no-pad">
						{% if themeSettings.themeLogo %}
							<h2 class="mz-storebranding" id="store-branding">
						    	<img class="footer-logo img-responsive" src="{{ themeSettings.themeLogo.imageUrl }}">
							</h2>
						{% else %}
							<h2 class="mz-storebranding" id="store-branding">
							    {{ siteContext.generalSettings.websiteName }}
							</h2>
						{% endif %}
					</div>
			    </div>
				<div class="footer-bottom-base col-xs-12 no-pad">
					<div class="cc-icons-wrapper col-xs-12 col-md-6 pull-right">
					    {% for ccEnabled in siteContext.checkoutSettings.supportedCards %}
					    	{% if ccEnabled == "[VISA, VISA]" %}
								<i class="icon cc-visa"></i>
					    	{% endif %}
					    {% endfor %}
					    {% for ccEnabled in siteContext.checkoutSettings.supportedCards %}
					    	{% if ccEnabled == "[AMEX, AMEX]" %}
								<i class="icon cc-amex"></i>
					    	{% endif %}
					    {% endfor %}
					    {% for ccEnabled in siteContext.checkoutSettings.supportedCards %}
					    	{% if ccEnabled == "[MC, MC]" %}
								<i class="icon cc-mc"></i>
					    	{% endif %}
					    {% endfor %}
					    {% for ccEnabled in siteContext.checkoutSettings.supportedCards %}
					    	{% if ccEnabled == "[DISCOVER, DISCOVER]" %}
								<i class="icon cc-discover"></i>
					    	{% endif %}
					    {% endfor %}
					    {% for ccEnabled in siteContext.checkoutSettings.supportedCards %}
					    	{% if ccEnabled == "[JCB, JCB]" %}
								<b>JCB</b>
					    	{% endif %}
					    {% endfor %}
					    {% for externalPayment in siteContext.checkoutSettings.externalPaymentWorkflowSettings %}
							{% if externalPayment.isEnabled %}
					            {% if externalPayment.name|lower == "visacheckout" %}
									<i><b><i class="icon cc-visa"></i> {{ labels.checkout }}</b></i>
					            {% endif %}
					            {% if externalPayment.name|lower == "paypalexpress2" %}
									<i class="icon cc-paypal"></i>
					            {% endif %}
							{% endif %}
					    {% endfor %}
					</div>
				    <div id="copyright" class="mz-pagefooter-copyright col-xs-12 col-md-6 pull-left">
				        <span class="mz-pagefooter-copyrighttext">
				            &copy; {% now Y %} {{ siteContext.generalSettings.websiteName }}. {{ labels.allRightsReserved }}
				        </span> 
				        <span class="mz-pagefooter-poweredby">
				             {{ labels.poweredBy }}
				        </span>
				    </div>
	    		</div>
    		</div>
		</div>
	</div>
</footer>